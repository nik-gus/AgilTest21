pipeline {
    agent { 
    label 'mac'
    }

    triggers { pollSCM('*/5 * * * *') }

    tools {
        maven 'M3'
    }
    
    options { timestamps () }
    
    stages {
        stage ('Build') {
            steps {
                withEnv(['PATH+EXTRA=/usr/sbin:/usr/bin:/sbin:/bin']) {  
                    sh 'mvn clean install -Dtest=CheckOutAndPayTest'
                }
            }
        }
    }
}
     
 
